<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:tint">@color/colorDarkGreen</item>
        <item name="android:background">@color/colorDark225</item>
    </style>

    <style name="ItemStructureStyle" parent="NavigationStyle">
        <item name="android:background">@color/colorDark180</item>
    </style>
</resources>
